<div class="ui raised very padded text container segment" id="main-container" >

  <h1 class="ui header">
    Discover Licensing Agreements
    <div class="sub header">
      Searches your Rails app for installed gems for version information and licenses.
    </div>
  </h1>

    <%= form_tag dependencies_path, method: 'get' do %>
      <div class="ui labeled input">
        <div class="ui label">
          https://
        </div>
        <%= text_field_tag :repo_url %>
      </div>

        <%= submit_tag 'Discover Licenses',  class:'ui button' %>
    <% end %>


</div>

<div class="ui segment" id="sha-list"></div>

<div class="ui segment" id="dep-list"></div>